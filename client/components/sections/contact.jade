section#contact
  div.container
    h1 Contact me
    form#contact-form(method="post" action="mail.php")
      div.form-group
        label(for="name") Name
        input#name.form-control(type="text" name="name" placeholder="Name" required)
      div.form-group
        label(for="email") Email address
        input#email.form-control(type="email" name="email" placeholder="Email" required)
      div.form-group
        label(for="name") Message
        textarea#message.form-control(name="message" rows="10" placeholder="Message" required)
      button.btn.btn-primary(type="submit") Send Message
    #form-messages
